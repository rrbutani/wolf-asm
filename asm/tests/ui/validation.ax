# Statement before any sections
.b1 33
add $1, $2

# Label before any sections is fine
beforeeverythingwooooo:

# Wrong order of sections
section .static

.const a 32

# Duplicate label name
foo: foo:
  .b8 32323232

  # Value out of range
  .b1 256
  .b2 65536
  .b4 4294967296
  .b8 18446744073709551616

  # Min/Max values should be fine
  .b1 0
  .b2 0
  .b4 0
  .b8 0
  .b1 0xff
  .b2 0xffff
  .b4 0xffff_ffff
  .b8 0xffff_ffff_ffff_ffff

# Duplicate constant with the same value is allowed and NOT an error
.const a 32

# Duplicate constant with a different value (warning)
.const a 33

bar:
  # This will get the value 33
  .b8 a

# Duplicate label name
foo:

  # Negative size
  .zero -12
  .uninit -1

section .code

  #TODO: Test cases for each instruction
  add $1 a # Valid

# Duplicate section
section .static

  # Empty strings are allowed and NOT an error
  .bytes ''
  .bytes ""
